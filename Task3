// App.jsx - React Frontend for Collaborative Editor
import React, { useEffect, useRef, useState } from "react";
import io from "socket.io-client";
import { v4 as uuidv4 } from "uuid";

const socket = io("http://localhost:4000"); // Backend server URL

export default function App() {
  const editorRef = useRef();
  const [docId] = useState(() => uuidv4()); // Unique document ID

  useEffect(() => {
    socket.emit("join-doc", docId);

    socket.on("doc-changes", (delta) => {
      if (editorRef.current && delta) {
        editorRef.current.innerText = delta;
      }
    });

    return () => {
      socket.disconnect();
    };
  }, [docId]);

  const handleChange = (e) => {
    const content = e.target.innerText;
    socket.emit("send-changes", { docId, content });
  };

  return (
    <div className="min-h-screen bg-gray-100 flex items-center justify-center">
      <div
        ref={editorRef}
        contentEditable
        onInput={handleChange}
        className="w-full max-w-4xl p-6 bg-white rounded shadow-md text-lg outline-none"
      ></div>
    </div>
  );
}
